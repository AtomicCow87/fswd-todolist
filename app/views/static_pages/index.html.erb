<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <div class="row" id="tasks"></div>
      <form class="form-inline" id="new-task">
        <input class="form-control" id="task-content" type="text" placeholder="What do we have to do?" required/>
        <button class="btn btn-primary">Create</button>
      </form>
      <div class="row form-inline">
        <button class="btn btn-info" id="sort-all">All</button>
        <button class="btn btn-info" id="sort-active">Active</button>
        <button class="btn btn-info" id="sort-completed">Completed</button>
      </div>
    </div>
  </div>
</div>